<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:spring-configured/>

    <bean class="com.magicliang.experiments.aspect.configurable.User" scope="prototype">
        <property name="dog" ref="dogService"/>
    </bean>

    <bean id="dogService" class="com.magicliang.experiments.aspect.configurable.Dog">
        <property name="id" value="2"/>
        <property name="name" value="dogService"/>
    </bean>
</beans>